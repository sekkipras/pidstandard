<Window x:Class="PIDStandardization.UI.Views.LineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Line" Height="750" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Project Info -->
        <GroupBox Grid.Row="0" Header="Project Information" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Project:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Name="ProjectNameTextBlock" Text="" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </GroupBox>

        <!-- Line Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Line Number -->
                <TextBlock Text="Line Number: *" Margin="0,5"/>
                <TextBox Name="LineNumberTextBox" Height="25" Margin="0,5"/>

                <!-- Service -->
                <TextBlock Text="Service:" Margin="0,5"/>
                <TextBox Name="ServiceTextBox" Height="25" Margin="0,5"/>

                <!-- Fluid Type -->
                <TextBlock Text="Fluid Type:" Margin="0,5"/>
                <ComboBox Name="FluidTypeComboBox" Height="25" Margin="0,5" IsEditable="True">
                    <ComboBoxItem Content="Water"/>
                    <ComboBoxItem Content="Steam"/>
                    <ComboBoxItem Content="Air"/>
                    <ComboBoxItem Content="Nitrogen"/>
                    <ComboBoxItem Content="Oil"/>
                    <ComboBoxItem Content="Gas"/>
                    <ComboBoxItem Content="Chemical"/>
                </ComboBox>

                <!-- Size & Material GroupBox -->
                <GroupBox Header="Size &amp; Material Specification" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <!-- Nominal Size -->
                        <TextBlock Text="Nominal Size:" Margin="0,5,0,2"/>
                        <ComboBox Name="NominalSizeComboBox" Height="25" Margin="0,0,0,5" IsEditable="True">
                            <ComboBoxItem Content="1/2&quot;"/>
                            <ComboBoxItem Content="3/4&quot;"/>
                            <ComboBoxItem Content="1&quot;"/>
                            <ComboBoxItem Content="1-1/2&quot;"/>
                            <ComboBoxItem Content="2&quot;"/>
                            <ComboBoxItem Content="3&quot;"/>
                            <ComboBoxItem Content="4&quot;"/>
                            <ComboBoxItem Content="6&quot;"/>
                            <ComboBoxItem Content="8&quot;"/>
                            <ComboBoxItem Content="10&quot;"/>
                            <ComboBoxItem Content="12&quot;"/>
                        </ComboBox>

                        <!-- Material Spec -->
                        <TextBlock Text="Material Spec:" Margin="0,5,0,2"/>
                        <TextBox Name="MaterialSpecTextBox" Height="25" Margin="0,0,0,5"/>

                        <!-- Pipe Schedule -->
                        <TextBlock Text="Pipe Schedule:" Margin="0,5,0,2"/>
                        <ComboBox Name="PipeScheduleComboBox" Height="25" Margin="0,0,0,5" IsEditable="True">
                            <ComboBoxItem Content="SCH 40"/>
                            <ComboBoxItem Content="SCH 80"/>
                            <ComboBoxItem Content="SCH 160"/>
                            <ComboBoxItem Content="SCH 10"/>
                            <ComboBoxItem Content="SCH 20"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- Process Parameters GroupBox -->
                <GroupBox Header="Design Conditions" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <!-- Design Pressure -->
                        <TextBlock Text="Design Pressure:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="DesignPressureTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="DesignPressureUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="bar"/>
                                <ComboBoxItem Content="psi"/>
                                <ComboBoxItem Content="kPa"/>
                                <ComboBoxItem Content="MPa"/>
                            </ComboBox>
                        </Grid>

                        <!-- Design Temperature -->
                        <TextBlock Text="Design Temperature:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="DesignTemperatureTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="DesignTemperatureUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="°C"/>
                                <ComboBoxItem Content="°F"/>
                                <ComboBoxItem Content="K"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Connectivity GroupBox -->
                <GroupBox Header="Equipment Connectivity (Optional)" Margin="0,10,0,5">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- From Equipment -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="From Equipment:"
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="FromEquipmentComboBox"
                                  Height="25" Margin="0,5" DisplayMemberPath="TagNumber"
                                  SelectedValuePath="EquipmentId"/>

                        <!-- To Equipment -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="To Equipment:"
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="ToEquipmentComboBox"
                                  Height="25" Margin="0,5" DisplayMemberPath="TagNumber"
                                  SelectedValuePath="EquipmentId"/>
                    </Grid>
                </GroupBox>

                <!-- Insulation GroupBox -->
                <GroupBox Header="Insulation (Optional)" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <CheckBox Name="InsulationRequiredCheckBox" Content="Insulation Required" Margin="0,5"/>

                        <TextBlock Text="Insulation Type:" Margin="0,5,0,2"/>
                        <TextBox Name="InsulationTypeTextBox" Height="25" Margin="0,0,0,5"/>

                        <TextBlock Text="Insulation Thickness (mm):" Margin="0,5,0,2"/>
                        <TextBox Name="InsulationThicknessTextBox" Height="25" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Length -->
                <TextBlock Text="Length (m):" Margin="0,5"/>
                <TextBox Name="LengthTextBox" Height="25" Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Save" Width="80" Height="30" Margin="5" Click="Save_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Height="30" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
