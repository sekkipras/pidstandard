<Window x:Class="PIDStandardization.UI.Views.InstrumentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Instrument" Height="700" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Project Info -->
        <GroupBox Grid.Row="0" Header="Project Information" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Project:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Name="ProjectNameTextBlock" Text="" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </GroupBox>

        <!-- Instrument Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Tag Number -->
                <TextBlock Text="Tag Number: *" Margin="0,5"/>
                <TextBox Name="TagNumberTextBox" Height="25" Margin="0,5"/>

                <!-- Instrument Type -->
                <TextBlock Text="Instrument Type: *" Margin="0,5"/>
                <ComboBox Name="InstrumentTypeComboBox" Height="25" Margin="0,5" IsEditable="True">
                    <ComboBoxItem Content="Transmitter"/>
                    <ComboBoxItem Content="Indicator"/>
                    <ComboBoxItem Content="Controller"/>
                    <ComboBoxItem Content="Switch"/>
                    <ComboBoxItem Content="Analyzer"/>
                    <ComboBoxItem Content="Alarm"/>
                </ComboBox>

                <!-- Measurement Type -->
                <TextBlock Text="Measurement Type: *" Margin="0,5"/>
                <ComboBox Name="MeasurementTypeComboBox" Height="25" Margin="0,5" IsEditable="True">
                    <ComboBoxItem Content="Pressure"/>
                    <ComboBoxItem Content="Temperature"/>
                    <ComboBoxItem Content="Flow"/>
                    <ComboBoxItem Content="Level"/>
                    <ComboBoxItem Content="Analysis"/>
                    <ComboBoxItem Content="Conductivity"/>
                    <ComboBoxItem Content="pH"/>
                </ComboBox>

                <!-- Range & Specifications GroupBox -->
                <GroupBox Header="Range &amp; Specifications" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <!-- Range Min -->
                        <TextBlock Text="Range Minimum:" Margin="0,5,0,2"/>
                        <TextBox Name="RangeMinTextBox" Height="25" Margin="0,0,0,5"/>

                        <!-- Range Max -->
                        <TextBlock Text="Range Maximum:" Margin="0,5,0,2"/>
                        <TextBox Name="RangeMaxTextBox" Height="25" Margin="0,0,0,5"/>

                        <!-- Units -->
                        <TextBlock Text="Units:" Margin="0,5,0,2"/>
                        <ComboBox Name="UnitsComboBox" Height="25" Margin="0,0,0,5" IsEditable="True">
                            <ComboBoxItem Content="bar"/>
                            <ComboBoxItem Content="psi"/>
                            <ComboBoxItem Content="kPa"/>
                            <ComboBoxItem Content="MPa"/>
                            <ComboBoxItem Content="°C"/>
                            <ComboBoxItem Content="°F"/>
                            <ComboBoxItem Content="K"/>
                            <ComboBoxItem Content="m³/h"/>
                            <ComboBoxItem Content="L/min"/>
                            <ComboBoxItem Content="gpm"/>
                            <ComboBoxItem Content="kg/h"/>
                            <ComboBoxItem Content="m"/>
                            <ComboBoxItem Content="mm"/>
                            <ComboBoxItem Content="%"/>
                        </ComboBox>

                        <!-- Accuracy -->
                        <TextBlock Text="Accuracy:" Margin="0,5,0,2"/>
                        <TextBox Name="AccuracyTextBox" Height="25" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <!-- Association GroupBox -->
                <GroupBox Header="Instrument Association (Choose One)" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <!-- Equipment Association -->
                        <RadioButton Name="AssociateWithEquipmentRadio"
                                     Content="Associated with Equipment"
                                     IsChecked="True"
                                     Margin="0,5"
                                     Checked="AssociationRadio_Checked"/>
                        <ComboBox Name="ParentEquipmentComboBox"
                                  Height="25"
                                  Margin="20,0,0,10"
                                  DisplayMemberPath="TagNumber"
                                  SelectedValuePath="EquipmentId"
                                  IsEnabled="True"/>

                        <!-- Line Association -->
                        <RadioButton Name="AssociateWithLineRadio"
                                     Content="Installed on Line"
                                     Margin="0,5"
                                     Checked="AssociationRadio_Checked"/>
                        <ComboBox Name="LineComboBox"
                                  Height="25"
                                  Margin="20,0,0,10"
                                  DisplayMemberPath="LineNumber"
                                  SelectedValuePath="LineId"
                                  IsEnabled="False"/>
                    </StackPanel>
                </GroupBox>

                <!-- Additional Information GroupBox -->
                <GroupBox Header="Additional Information (Optional)" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <!-- Process Connection -->
                        <TextBlock Text="Process Connection:" Margin="0,5,0,2"/>
                        <ComboBox Name="ProcessConnectionComboBox" Height="25" Margin="0,0,0,5" IsEditable="True">
                            <ComboBoxItem Content="Flange"/>
                            <ComboBoxItem Content="Threaded"/>
                            <ComboBoxItem Content="Welded"/>
                            <ComboBoxItem Content="Compression"/>
                        </ComboBox>

                        <!-- Output Signal -->
                        <TextBlock Text="Output Signal:" Margin="0,5,0,2"/>
                        <ComboBox Name="OutputSignalComboBox" Height="25" Margin="0,0,0,5" IsEditable="True">
                            <ComboBoxItem Content="4-20 mA"/>
                            <ComboBoxItem Content="0-10 V"/>
                            <ComboBoxItem Content="Digital"/>
                            <ComboBoxItem Content="HART"/>
                            <ComboBoxItem Content="Foundation Fieldbus"/>
                            <ComboBoxItem Content="Profibus"/>
                        </ComboBox>

                        <!-- Loop Number -->
                        <TextBlock Text="Loop Number:" Margin="0,5,0,2"/>
                        <TextBox Name="LoopNumberTextBox" Height="25" Margin="0,0,0,5"/>

                        <!-- Location -->
                        <TextBlock Text="Location:" Margin="0,5,0,2"/>
                        <TextBox Name="LocationTextBox" Height="25" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Save" Width="80" Height="30" Margin="5" Click="Save_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Height="30" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
