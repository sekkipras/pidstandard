<Window x:Class="PIDStandardization.UI.Views.EquipmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Equipment" Height="850" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Project Info -->
        <GroupBox Grid.Row="0" Header="Project Information" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Project:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Name="ProjectNameTextBlock" Text="" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="2" Text="Tagging Mode:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <TextBlock Grid.Column="3" Name="TaggingModeTextBlock" Text="" VerticalAlignment="Center" FontWeight="Bold" Foreground="DarkBlue"/>
            </Grid>
        </GroupBox>

        <!-- Equipment Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Tag Number -->
                <TextBlock Text="Tag Number: *" Margin="0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Name="TagNumberTextBox" Height="25" Margin="0,5,5,5"/>
                    <Button Grid.Column="1" Content="Auto Generate" Width="100" Height="25" Margin="5" Click="AutoGenerate_Click"/>
                </Grid>

                <!-- Equipment Type -->
                <TextBlock Text="Equipment Type:" Margin="0,5"/>
                <ComboBox Name="EquipmentTypeComboBox" Height="25" Margin="0,5" IsEditable="True">
                    <ComboBoxItem Content="Pump"/>
                    <ComboBoxItem Content="Valve"/>
                    <ComboBoxItem Content="Tank"/>
                    <ComboBoxItem Content="Heat Exchanger"/>
                    <ComboBoxItem Content="Vessel"/>
                    <ComboBoxItem Content="Compressor"/>
                    <ComboBoxItem Content="Filter"/>
                    <ComboBoxItem Content="Separator"/>
                    <ComboBoxItem Content="Motor"/>
                    <ComboBoxItem Content="Instrument"/>
                </ComboBox>

                <!-- Description -->
                <TextBlock Text="Description:" Margin="0,5"/>
                <TextBox Name="DescriptionTextBox" Height="60" Margin="0,5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                <!-- Service -->
                <TextBlock Text="Service:" Margin="0,5"/>
                <TextBox Name="ServiceTextBox" Height="25" Margin="0,5"/>

                <!-- Area -->
                <TextBlock Text="Area / Location:" Margin="0,5"/>
                <TextBox Name="AreaTextBox" Height="25" Margin="0,5"/>

                <!-- Status -->
                <TextBlock Text="Status:" Margin="0,5"/>
                <ComboBox Name="StatusComboBox" Height="25" Margin="0,5">
                    <ComboBoxItem Content="Planned"/>
                    <ComboBoxItem Content="Installed"/>
                    <ComboBoxItem Content="Commissioned"/>
                    <ComboBoxItem Content="Decommissioned"/>
                </ComboBox>

                <!-- Manufacturer -->
                <TextBlock Text="Manufacturer:" Margin="0,5"/>
                <TextBox Name="ManufacturerTextBox" Height="25" Margin="0,5"/>

                <!-- Model -->
                <TextBlock Text="Model:" Margin="0,5"/>
                <TextBox Name="ModelTextBox" Height="25" Margin="0,5"/>

                <!-- Equipment Connectivity (Optional - for valves, etc.) -->
                <GroupBox Header="Equipment Connectivity (Optional)" Margin="0,10,0,5">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Upstream Equipment -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Upstream Equipment:"
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="UpstreamEquipmentComboBox"
                                  Height="25" Margin="0,5" DisplayMemberPath="TagNumber"
                                  SelectedValuePath="EquipmentId"/>

                        <!-- Downstream Equipment -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Downstream Equipment:"
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="DownstreamEquipmentComboBox"
                                  Height="25" Margin="0,5" DisplayMemberPath="TagNumber"
                                  SelectedValuePath="EquipmentId"/>
                    </Grid>
                </GroupBox>

                <!-- Drawing Assignment (Optional) -->
                <GroupBox Header="Drawing Assignment (Optional)" Margin="0,10,0,5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Source Drawing:"
                                   VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <ComboBox Grid.Column="1" Name="SourceDrawingComboBox"
                                  Height="25" Margin="0,5" DisplayMemberPath="DrawingNumber"
                                  SelectedValuePath="DrawingId"/>
                    </Grid>
                </GroupBox>

                <!-- Process Parameters GroupBox -->
                <GroupBox Header="Process Parameters (Optional)" Margin="0,10,0,5">
                    <StackPanel Margin="5">
                        <!-- Operating Conditions Header -->
                        <TextBlock Text="Operating Conditions" FontWeight="Bold" Margin="0,5"/>

                        <!-- Operating Pressure -->
                        <TextBlock Text="Operating Pressure:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="OperatingPressureTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="OperatingPressureUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="bar"/>
                                <ComboBoxItem Content="psi"/>
                                <ComboBoxItem Content="kPa"/>
                                <ComboBoxItem Content="MPa"/>
                            </ComboBox>
                        </Grid>

                        <!-- Operating Temperature -->
                        <TextBlock Text="Operating Temperature:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="OperatingTemperatureTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="OperatingTemperatureUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="°C"/>
                                <ComboBoxItem Content="°F"/>
                                <ComboBoxItem Content="K"/>
                            </ComboBox>
                        </Grid>

                        <!-- Flow Rate -->
                        <TextBlock Text="Flow Rate:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="FlowRateTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="FlowRateUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="m³/h"/>
                                <ComboBoxItem Content="L/min"/>
                                <ComboBoxItem Content="gpm"/>
                                <ComboBoxItem Content="kg/h"/>
                            </ComboBox>
                        </Grid>

                        <!-- Design Conditions Header -->
                        <TextBlock Text="Design Conditions (Maximum)" FontWeight="Bold" Margin="0,15,0,5"/>

                        <!-- Design Pressure -->
                        <TextBlock Text="Design Pressure:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="DesignPressureTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="DesignPressureUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="bar"/>
                                <ComboBoxItem Content="psi"/>
                                <ComboBoxItem Content="kPa"/>
                                <ComboBoxItem Content="MPa"/>
                            </ComboBox>
                        </Grid>

                        <!-- Design Temperature -->
                        <TextBlock Text="Design Temperature:" Margin="0,5,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="DesignTemperatureTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="DesignTemperatureUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="°C"/>
                                <ComboBoxItem Content="°F"/>
                                <ComboBoxItem Content="K"/>
                            </ComboBox>
                        </Grid>

                        <!-- Power/Capacity -->
                        <TextBlock Text="Power / Capacity:" Margin="0,15,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="PowerOrCapacityTextBox" Height="25" Margin="0,0,5,5"/>
                            <ComboBox Grid.Column="1" Name="PowerOrCapacityUnitComboBox" Height="25" Margin="0,0,0,5" SelectedIndex="0">
                                <ComboBoxItem Content="kW"/>
                                <ComboBoxItem Content="HP"/>
                                <ComboBoxItem Content="m³"/>
                                <ComboBoxItem Content="L"/>
                                <ComboBoxItem Content="tons"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Validate Tag" Width="100" Height="30" Margin="5" Click="ValidateTag_Click"/>
            <Button Content="Save" Width="80" Height="30" Margin="5" Click="Save_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Height="30" Margin="5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
