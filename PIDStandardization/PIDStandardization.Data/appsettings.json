{
  "DatabaseSettings": {
    "ConnectionString": "Server=localhost\\SQLEXPRESS;Database=PIDStandardization;Trusted_Connection=True;TrustServerCertificate=True;",
    "EnableSensitiveDataLogging": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "RetryDelayMilliseconds": 1000
  },
  "EquipmentTypes": {
    "Types": [
      { "Name": "Pump", "Code": "P", "Patterns": ["PUMP", "PMP", "P-"] },
      { "Name": "Valve", "Code": "V", "Patterns": ["VALVE", "VLV", "V-"] },
      { "Name": "Tank", "Code": "TK", "Patterns": ["TANK", "TK", "T-"] },
      { "Name": "Vessel", "Code": "VS", "Patterns": ["VESSEL", "VSL", "VS"] },
      { "Name": "Heat Exchanger", "Code": "HX", "Patterns": ["HX", "HEAT", "EXCHANGER"] },
      { "Name": "Filter", "Code": "F", "Patterns": ["FILTER", "FLT", "F-"] },
      { "Name": "Compressor", "Code": "C", "Patterns": ["COMPRESSOR", "COMP", "C-"] },
      { "Name": "Separator", "Code": "S", "Patterns": ["SEPARATOR", "SEP", "S-"] },
      { "Name": "Reactor", "Code": "R", "Patterns": ["REACTOR", "RX", "R-"] },
      { "Name": "Instrument", "Code": "I", "Patterns": ["INST", "INSTRUMENT"] },
      { "Name": "Motor", "Code": "M", "Patterns": ["MOTOR", "MTR", "M-"] },
      { "Name": "Blower", "Code": "BL", "Patterns": ["BLOWER", "BLW", "BL-"] },
      { "Name": "Agitator", "Code": "AG", "Patterns": ["AGITATOR", "MIXER", "AG-"] },
      { "Name": "Column", "Code": "COL", "Patterns": ["COLUMN", "TOWER", "COL-"] }
    ],
    "DefaultType": "Equipment"
  },
  "Tagging": {
    "CustomTagFormat": "P-{Area}-{Type}{Sequence:D3}",
    "KksTagFormat": "{SystemCode}{EquipmentCode}{CounterNumber}",
    "SequenceNumberPadding": 3,
    "StartingSequenceNumber": 1,
    "TagAttributeNames": ["TAG", "TAGNUMBER", "TAG_NUMBER", "TAGNO", "EQUIPMENT_TAG"]
  },
  "Paths": {
    "AppDataPath": "{CommonApplicationData}\\PIDStandardization",
    "DrawingsPath": "{AppDataPath}\\Drawings",
    "LogsPath": "{AppDataPath}\\Logs",
    "ExportsPath": "{AppDataPath}\\Exports",
    "TempPath": "{AppDataPath}\\Temp"
  },
  "Logging": {
    "MinimumLevel": "Debug",
    "RetainedFileCountLimit": 30,
    "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true
  }
}
